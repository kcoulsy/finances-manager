# Database
# SQLite database URL (for development)
# For production, use PostgreSQL or MySQL connection string
DATABASE_URL="file:./dev.db"

# Better Auth Configuration
# Secret key for signing tokens (generate a strong random string)
# You can generate one with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here-minimum-32-characters"

# Base URL for Better Auth (server-side)
# Use your production domain in production
BETTER_AUTH_URL="http://localhost:3000"

# Base URL for Better Auth (client-side)
# This is exposed to the browser, use your production domain in production
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# Email Configuration
# Default sender email address
FROM_EMAIL="noreply@example.com"

# Email Service Provider (optional - for production)
# Uncomment and configure when ready to send emails in production
# RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Environment
# Set to "development" or "production"
NODE_ENV="development"

# Logging
# Log level: "debug", "info", "warn", "error"
# In production, use "warn" or "error"
LOG_LEVEL="debug"

# Testing (optional)
# Separate database URL for tests
# Only needed if you want a separate test database
# TEST_DATABASE_URL="file:./.test.db"
